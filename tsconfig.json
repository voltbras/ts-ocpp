{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["es2019"],
    "declaration": true,
    "target": "es2018",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "stripInternal": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "examples"]
}
